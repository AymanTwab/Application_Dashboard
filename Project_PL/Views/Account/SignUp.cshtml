@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Sign up</h2>
                @Html.ValidationSummary(true, "ErrorMsg", new { @class = "text-danger" })
                <form asp-controller="Account" asp-action="SignUp" class="register-form" id="register-form">
                    <div class="form-group">
                        <label asp-for="Username"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input type="text" asp-for="@Model.Username" id="name" placeholder="Username" />
                        <div class="bg-danger">
                        <span asp-validation-for="Username" ></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"><i class="zmdi zmdi-email"></i></label>
                        <input type="email" asp-for="Email" id="email" placeholder="Your Email" />
                        <span asp-validation-for="Email" class="bg-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"><i class="zmdi zmdi-lock"></i></label>
                        <input type="password" asp-for="Password" id="pass" placeholder="Password" />
                        <span asp-validation-for="Password" class="bg-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input type="password" asp-for="ConfirmPassword" id="re_pass" placeholder="Repeat your password" />
                        <span asp-validation-for="ConfirmPassword" class="bg-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="checkbox" asp-for="IsAgree" name="agree-term" id="agree-term" class="agree-term" />
                        <label asp-for="IsAgree" for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                        <span asp-validation-for="IsAgree" class="bg-danger"></span>
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="SignUp" />
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="~/Files/images/signup-image.jpg" alt="sing up image"></figure>
                <a asp-action="SignIn" class="signup-image-link">I am already member</a>
            </div>
        </div>
    </div>
</section>
