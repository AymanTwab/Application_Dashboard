@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>Departments</h1>
<br/>
<a asp-action="Create" class="btn btn-primary" >Create New Department</a>
<br/>
<br/>

@if (Model?.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(x=>x.Id)</th>
                <th scope="col">@Html.DisplayNameFor(x=>x.Name)</th>
                <th scope="col">Details</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.Id</th>
                    <td>@item.Name</td>
                    <td><a class="btn btn-success" asp-controller="Department" asp-action="Details" asp-route-id="@item.Id">Details</a></td>
                    <td><a class="btn btn-success" asp-controller="Department" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                    <td><a class="btn btn-success" asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>No Departments Found!!</h3>
    </div>
}

