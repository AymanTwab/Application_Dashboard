@model IEnumerable<EmployeeDetailsViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Employees</h1>
<br />
<div class="row">
    <a asp-action="Create" class="btn btn-primary">Create New Employee</a>
    <br />
</div>
<br />
<br />
<form class="my-3" asp-action="Index" asp-controller="Employee">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search..." name="SearchValue" class="form-control" />
        </div>
        <div class="col-sm-4">
            <button type="submit" class="btn btn-success btn-block">Search</button>
        </div>
    </div>
</form>
@if (Model?.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(x => x.Id)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.Name)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.Address)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.Salary)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.HiringDate)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.DepartmentName)</th>
                <th scope="col">Details</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Address</td>
                    <td>@item.Salary</td>
                    <td>@item.HiringDate</td>
                    <td>@item.DepartmentName</td>
                    <td><a class="btn btn-success" asp-controller="Employee" asp-action="Details" asp-route-id="@item.Id">Details</a></td>
                    <td><a class="btn btn-success" asp-controller="Employee" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                    <td><a class="btn btn-danger" asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>No Employees Found!!</h3>
    </div>
}

